  <script>
    // API Configuration
    const API_BASE_URL = 'http://localhost:5000/api';
    
    // Get token
    const token = localStorage.getItem('token');
    if (!token) {
      alert('Vui l√≤ng ƒëƒÉng nh·∫≠p ƒë·ªÉ xem b√°o c√°o');
      window.location.href = 'login.html';
    }
    
    // ‚úÖ ƒê√öNG: ƒê·ªçc role t·ª´ session_user (kh√¥ng ph·∫£i user)
    const sessionUser = JSON.parse(localStorage.getItem('session_user') || '{}');
    const userRole = sessionUser.role;
    
    console.log('üë§ Session User:', sessionUser);
    console.log('üë§ User Role:', userRole);
    
    // Allow ADMIN and RECRUITER, block CANDIDATE and undefined
    if (!userRole) {
      alert('‚ùå Kh√¥ng t√¨m th·∫•y th√¥ng tin quy·ªÅn truy c·∫≠p.\n\nVui l√≤ng ƒëƒÉng nh·∫≠p l·∫°i!');
      localStorage.clear();
      window.location.href = 'login.html';
    }
    
    if (userRole === 'CANDIDATE') {
      alert('‚ùå ·ª®ng vi√™n kh√¥ng c√≥ quy·ªÅn truy c·∫≠p trang b√°o c√°o.\n\nCh·ªâ d√†nh cho Qu·∫£n tr·ªã vi√™n v√† Nh√† tuy·ªÉn d·ª•ng!');
      window.location.href = 'index.html';
    }
    
    console.log('‚úÖ Access granted for role:', userRole);

    // Global variables for modals
    let currentDeleteReportId = null;
    let currentEditReportId = null;



    // ========== LOAD RECRUITER VIOLATIONS (Company Only) ==========
    async function loadRecruiterViolations() {
      try {
        console.log('‚ö†Ô∏è [RECRUITER] Loading violations from API...');
        const filter = document.getElementById('recruiterViolationTypeFilter').value;
        let url = `${API_BASE_URL}/reports/violations`;
        if (filter) url += `?violationType=${filter}`;

        console.log('‚ö†Ô∏è Fetching from:', url);
        const response = await fetch(url, {
          headers: { 'Authorization': `Bearer ${token}` }
        });

        console.log('‚ö†Ô∏è Violations API Response Status:', response.status);

        if (!response.ok) {
          const errorText = await response.text();
          console.error('‚ùå Violations API Error:', errorText);
          throw new Error('Failed to load violations');
        }

        const result = await response.json();
        console.log('‚ö†Ô∏è Violations Data:', result);
        
        const violations = result.data || [];
        console.log(`‚ö†Ô∏è Found ${violations.length} violations`);

        const violationsList = document.getElementById('recruiterViolationsList');
        
        if (violations.length === 0) {
          console.log('‚ÑπÔ∏è No violations found, showing empty message');
          violationsList.innerHTML = `
            <tr>
              <td colspan="7" class="text-center text-purple-300 py-12">
                <div class="flex flex-col items-center gap-3">
                  <span class="text-5xl">‚úÖ</span>
                  <span class="text-lg font-semibold">Kh√¥ng c√≥ vi ph·∫°m n√†o ƒë∆∞·ª£c ghi nh·∫≠n</span>
                  <span class="text-sm text-purple-400">T·∫•t c·∫£ ·ª©ng vi√™n ƒëang tu√¢n th·ªß quy ƒë·ªãnh</span>
                </div>
              </td>
            </tr>
          `;
          return;
        }

        violationsList.innerHTML = violations.map(v => {
          const timestamp = new Date(v.reported_at || v.timestamp).toLocaleString('vi-VN', {
            year: 'numeric',
            month: '2-digit',
            day: '2-digit',
            hour: '2-digit',
            minute: '2-digit'
          });
          
          // Determine result badge based on score or status
          let resultBadge = '';
          const score = parseInt(v.score) || 0;
          if (v.result === 'passed' || v.passed || score >= 50) {
            resultBadge = '<span class="px-3 py-1 bg-green-500/20 text-green-300 rounded-full text-xs font-semibold">‚úÖ ƒê·∫°t</span>';
          } else if (v.result === 'failed' || v.passed === false || score < 50) {
            resultBadge = '<span class="px-3 py-1 bg-red-500/20 text-red-300 rounded-full text-xs font-semibold">‚ùå Kh√¥ng ƒë·∫°t</span>';
          } else {
            resultBadge = '<span class="px-3 py-1 bg-gray-500/20 text-gray-300 rounded-full text-xs font-semibold">‚è≥ ƒêang l√†m</span>';
          }

          // Format violation type display with color coding
          const typeDisplay = {
            'tab_switch': '<span class="px-2 py-1 bg-orange-500/20 text-orange-300 rounded text-xs">üîÑ Chuy·ªÉn tab</span>',
            'camera_off': '<span class="px-2 py-1 bg-red-500/20 text-red-300 rounded text-xs">üì∑ T·∫Øt camera</span>',
            'lost_focus': '<span class="px-2 py-1 bg-yellow-500/20 text-yellow-300 rounded text-xs">üëÅÔ∏è M·∫•t focus</span>',
            'other': '<span class="px-2 py-1 bg-gray-500/20 text-gray-300 rounded text-xs">‚ö†Ô∏è Kh√°c</span>'
          }[v.violation_type] || `<span class="px-2 py-1 bg-gray-500/20 text-gray-300 rounded text-xs">${v.violation_type || 'N/A'}</span>`;
          
          return `
            <tr class="border-b border-orange-400/10 hover:bg-orange-500/10 transition-colors">
              <td class="px-4 py-3 font-mono text-sm text-purple-300">#${v.candidateId || v.candidate_id || 'N/A'}</td>
              <td class="px-4 py-3 font-medium">${v.candidate_name || 'Unknown'}</td>
              <td class="px-4 py-3 text-sm text-purple-300 max-w-xs truncate" title="${v.test_name || 'N/A'}">${v.test_name || 'N/A'}</td>
              <td class="px-4 py-3 text-xs text-purple-300">${timestamp}</td>
              <td class="px-4 py-3">${typeDisplay}</td>
              <td class="px-4 py-3 font-bold text-center ${score >= 50 ? 'text-green-300' : 'text-red-300'}">${score}</td>
              <td class="px-4 py-3 text-center">${resultBadge}</td>
            </tr>
          `;
        }).join('');

        console.log('‚úÖ Recruiter violations loaded and displayed in table');

      } catch (error) {
