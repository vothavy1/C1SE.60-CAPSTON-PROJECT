    // ========== LOAD ALL REPORTS FROM DATABASE (ADMIN ONLY) ==========
    async function loadDatabaseReports() {
      try {
        console.log('üìÅ [ADMIN] Loading all reports from database...');
        const filter = document.getElementById('dbReportTypeFilter').value;
        let url = `${API_BASE_URL}/reports/all-reports`;
        if (filter) url += `?report_type=${filter}`;

        console.log('üìÅ Fetching from:', url);
        const response = await fetch(url, {
          headers: { 'Authorization': `Bearer ${token}` }
        });

        console.log('üìÅ Database Reports API Response Status:', response.status);

        if (!response.ok) {
          const errorText = await response.text();
          console.error('‚ùå Database Reports API Error:', errorText);
          throw new Error('Failed to load database reports');
        }

        const result = await response.json();
        console.log('üìÅ Database Reports Data:', result);
        
        const reports = result.data || [];
        console.log(`üìÅ Found ${reports.length} reports in database`);

        const reportsList = document.getElementById('dbReportsList');
        
        if (reports.length === 0) {
          console.log('‚ÑπÔ∏è No reports found in database');
          reportsList.innerHTML = `
            <tr>
              <td colspan="7" class="text-center text-purple-300 py-12">
                <div class="flex flex-col items-center gap-3">
                  <span class="text-5xl">üì≠</span>
                  <span class="text-lg font-semibold">Ch∆∞a c√≥ b√°o c√°o n√†o trong database</span>
                  <span class="text-sm text-purple-400">B√°o c√°o s·∫Ω t·ª± ƒë·ªông ƒë∆∞·ª£c t·∫°o khi c√≥ ho·∫°t ƒë·ªông trong h·ªá th·ªëng</span>
                </div>
              </td>
            </tr>
          `;
          return;
        }

        reportsList.innerHTML = reports.map(r => {
          const createdAt = new Date(r.created_at).toLocaleString('vi-VN', {
            year: 'numeric',
            month: '2-digit',
            day: '2-digit',
            hour: '2-digit',
            minute: '2-digit'
          });
          
          // Format report type badge
          const typeColors = {
            'VIOLATION': 'bg-red-500/20 text-red-300',
            'STATISTICS': 'bg-blue-500/20 text-blue-300',
            'ACTIVITY_LOG': 'bg-green-500/20 text-green-300',
            'NOTIFICATION': 'bg-yellow-500/20 text-yellow-300',
            'CUSTOM': 'bg-purple-500/20 text-purple-300',
            'CANDIDATE_PIPELINE': 'bg-indigo-500/20 text-indigo-300',
            'TEST_PERFORMANCE': 'bg-teal-500/20 text-teal-300',
            'INTERVIEWER_EFFICIENCY': 'bg-orange-500/20 text-orange-300',
            'HIRING_METRICS': 'bg-pink-500/20 text-pink-300'
          };
          const typeColor = typeColors[r.report_type] || 'bg-gray-500/20 text-gray-300';
          
          // Truncate long report names
          const reportName = r.report_name.length > 50 ? 
            r.report_name.substring(0, 47) + '...' : r.report_name;
          
          return `
            <tr class="border-b border-blue-400/10 hover:bg-blue-500/10 transition-colors">
              <td class="px-4 py-3 font-mono text-sm text-purple-300">#${r.report_id}</td>
              <td class="px-4 py-3 font-medium" title="${r.report_name}">${reportName}</td>
              <td class="px-4 py-3">
                <span class="px-3 py-1 ${typeColor} rounded-full text-xs font-semibold">${r.report_type}</span>
              </td>
              <td class="px-4 py-3 text-sm text-purple-300">${r.creator_name}</td>
              <td class="px-4 py-3 text-xs text-purple-300">${createdAt}</td>
              <td class="px-4 py-3 text-center">
                <button onclick="viewDbReportDetails(${r.report_id}, ${JSON.stringify(r.parameters).replace(/"/g, '&quot;')})" class="px-3 py-1 bg-blue-500/20 hover:bg-blue-500/40 text-blue-300 rounded transition text-sm">
                  Xem Chi Ti·∫øt
                </button>
              </td>
              <td class="px-4 py-3 text-center">
                <div class="flex gap-2 justify-center">
                  <button onclick="editReport(${r.report_id}, '${r.report_name.replace(/'/g, "\\'")}', '${r.report_type}')" class="px-3 py-1 bg-yellow-500/20 hover:bg-yellow-500/40 text-yellow-300 rounded transition text-sm">
                    S·ª≠a
                  </button>
                  <button onclick="deleteReport(${r.report_id}, '${r.report_name.replace(/'/g, "\\'")}')}" class="px-3 py-1 bg-red-500/20 hover:bg-red-500/40 text-red-300 rounded transition text-sm">
                    X√≥a
                  </button>
                </div>
              </td>
            </tr>
          `;
        }).join('');

        console.log('‚úÖ Database reports loaded and displayed');

      } catch (error) {
        console.error('‚ùå Error loading database reports:', error);
        document.getElementById('dbReportsList').innerHTML = `
          <tr>
            <td colspan="7" class="text-center text-red-300 py-12">
              <div class="flex flex-col items-center gap-3">
                <span class="text-5xl">‚ö†Ô∏è</span>
                <span class="text-lg font-semibold">Kh√¥ng th·ªÉ t·∫£i danh s√°ch b√°o c√°o</span>
                <span class="text-sm text-red-400">${error.message}</span>
                <button onclick="loadDatabaseReports()" class="mt-2 px-4 py-2 bg-red-500/20 hover:bg-red-500/30 rounded-lg transition">
                  üîÑ Th·ª≠ l·∫°i
                </button>
              </div>
            </td>
          </tr>
        `;
      }
    }

    // ========== EDIT REPORT ==========
    function editReport(reportId, reportName, reportType) {
      console.log(`‚úèÔ∏è Opening edit modal for report ${reportId}...`);
      
      currentEditReportId = reportId;
      document.getElementById('editCurrentName').textContent = reportName;
      document.getElementById('editReportNameInput').value = reportName;
      
      // Show modal
      document.getElementById('editModal').classList.add('show');
      
      // Reset states
      document.getElementById('editModalContent').classList.remove('hidden');
      document.getElementById('editModalLoading').classList.add('hidden');
      document.getElementById('editModalSuccess').classList.add('hidden');
      document.getElementById('editModalError').classList.add('hidden');
      
      // Focus input
      setTimeout(() => {
        document.getElementById('editReportNameInput').focus();
      }, 100);
    }

    async function confirmEdit() {
      try {
        const newName = document.getElementById('editReportNameInput').value.trim();
        
        if (!newName) {
          alert('T√™n b√°o c√°o kh√¥ng ƒë∆∞·ª£c ƒë·ªÉ tr·ªëng!');
          return;
        }

        // Show loading
        document.getElementById('editModalContent').classList.add('hidden');
        document.getElementById('editModalLoading').classList.remove('hidden');

        console.log(`üì§ Sending update request for report ${currentEditReportId}...`);

        // Send update request
        const response = await fetch(`${API_BASE_URL}/reports/${currentEditReportId}`, {
          method: 'PUT',
          headers: {
            'Authorization': `Bearer ${token}`,
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            report_name: newName
          })
        });

        console.log(`üì° Update response status: ${response.status}`);

        if (!response.ok) {
          const errorData = await response.json().catch(() => ({ message: 'Unknown error' }));
          throw new Error(errorData.message || 'Failed to update report');
        }

        const result = await response.json();
        console.log('‚úÖ Report updated successfully:', result);
        
        // Show success
        document.getElementById('editModalLoading').classList.add('hidden');
        document.getElementById('editModalSuccess').classList.remove('hidden');
        
        // Reload table after 1.5 seconds
        setTimeout(() => {
          closeEditModal();
          loadDatabaseReports();
        }, 1500);

      } catch (error) {
        console.error('‚ùå Error updating report:', error);
        
        // Show error
        document.getElementById('editModalLoading').classList.add('hidden');
        document.getElementById('editModalError').classList.remove('hidden');
        document.getElementById('editErrorMessage').textContent = error.message;
      }
    }

    function closeEditModal() {
      document.getElementById('editModal').classList.remove('show');
      currentEditReportId = null;
    }

    // ========== DELETE REPORT ==========
    function deleteReport(reportId, reportName) {
      console.log(`üóëÔ∏è Opening delete modal for report ${reportId}...`);
      console.log(`üìù Report name: ${reportName}`);
      
      currentDeleteReportId = reportId;
      document.getElementById('deleteReportName').textContent = `"${reportName}"`;
      
      // Show modal
      document.getElementById('deleteModal').classList.add('show');
      
      // Reset states
      document.getElementById('deleteModalContent').classList.remove('hidden');
      document.getElementById('deleteModalLoading').classList.add('hidden');
      document.getElementById('deleteModalSuccess').classList.add('hidden');
      document.getElementById('deleteModalError').classList.add('hidden');
    }

    async function confirmDelete() {
      try {
        // Show loading
        document.getElementById('deleteModalContent').classList.add('hidden');
        document.getElementById('deleteModalLoading').classList.remove('hidden');

        console.log(`üåê Sending DELETE request to: ${API_BASE_URL}/reports/${currentDeleteReportId}`);
        
        // Send delete request
        const response = await fetch(`${API_BASE_URL}/reports/${currentDeleteReportId}`, {
          method: 'DELETE',
          headers: {
            'Authorization': `Bearer ${token}`
          }
        });

        console.log(`üì° Delete response status: ${response.status}`);

        if (!response.ok) {
          const errorData = await response.json().catch(() => ({ message: 'Unknown error' }));
          console.error('‚ùå Delete failed:', errorData);
          throw new Error(errorData.message || 'Failed to delete report');
        }

        const result = await response.json();
        console.log('‚úÖ Report deleted successfully:', result);
        
        // Show success
        document.getElementById('deleteModalLoading').classList.add('hidden');
        document.getElementById('deleteModalSuccess').classList.remove('hidden');
        
        // Reload table after 1.5 seconds
        setTimeout(() => {
          closeDeleteModal();
          loadDatabaseReports();
        }, 1500);

      } catch (error) {
        console.error('‚ùå Error deleting report:', error);
        console.error('‚ùå Error stack:', error.stack);
        
        // Show error
        document.getElementById('deleteModalLoading').classList.add('hidden');
        document.getElementById('deleteModalError').classList.remove('hidden');
        document.getElementById('deleteErrorMessage').textContent = error.message;
      }
    }

    function closeDeleteModal() {
      document.getElementById('deleteModal').classList.remove('show');
      currentDeleteReportId = null;
    }

    // ========== VIEW DATABASE REPORT DETAILS ==========
    function viewDbReportDetails(reportId, parameters) {
      try {
        console.log(`üëÅÔ∏è Viewing database report ${reportId}...`);
        
        // Format parameters for display
        const paramsDisplay = parameters && Object.keys(parameters).length > 0 ? 
          JSON.stringify(parameters, null, 2) : 'Kh√¥ng c√≥ d·ªØ li·ªáu b·ªï sung';

        alert(`Chi Ti·∫øt B√°o C√°o #${reportId}\n\n` +
              `D·ªØ li·ªáu Parameters:\n${paramsDisplay}`);

      } catch (error) {
        console.error('‚ùå Error viewing report details:', error);
        alert(`‚ùå Kh√¥ng th·ªÉ xem chi ti·∫øt b√°o c√°o: ${error.message}`);
      }
    }

    // ========== EVENT LISTENERS ==========
    document.getElementById('refreshBtn').addEventListener('click', () => {
      if (userRole === 'ADMIN') {
        loadDatabaseReports();
      } else if (userRole === 'RECRUITER') {
        loadRecruiterViolations();
      }
    });

    // Recruiter event listeners
    if (userRole === 'RECRUITER') {
      document.getElementById('recruiterViolationTypeFilter').addEventListener('change', loadRecruiterViolations);
    }

    // Admin event listeners
    if (userRole === 'ADMIN') {
      document.getElementById('refreshDbReportsBtn').addEventListener('click', loadDatabaseReports);
      document.getElementById('dbReportTypeFilter').addEventListener('change', loadDatabaseReports);
      
      // Delete modal listeners
      document.getElementById('confirmDeleteBtn').addEventListener('click', confirmDelete);
      document.getElementById('cancelDeleteBtn').addEventListener('click', closeDeleteModal);
      document.getElementById('closeSuccessBtn').addEventListener('click', closeDeleteModal);
      document.getElementById('closeErrorBtn').addEventListener('click', closeDeleteModal);
      
      // Edit modal listeners
      document.getElementById('confirmEditBtn').addEventListener('click', confirmEdit);
      document.getElementById('cancelEditBtn').addEventListener('click', closeEditModal);
      document.getElementById('closeEditSuccessBtn').addEventListener('click', closeEditModal);
      document.getElementById('closeEditErrorBtn').addEventListener('click', closeEditModal);
      
      // Enter key support for edit
      document.getElementById('editReportNameInput').addEventListener('keypress', (e) => {
        if (e.key === 'Enter') {
          confirmEdit();
        }
      });
      
      // Close modal on backdrop click
      document.getElementById('deleteModal').addEventListener('click', (e) => {
        if (e.target.id === 'deleteModal') {
          closeDeleteModal();
        }
      });
      
      document.getElementById('editModal').addEventListener('click', (e) => {
        if (e.target.id === 'editModal') {
          closeEditModal();
        }
      });
    }

    // ========== INITIAL LOAD ==========
    // Show/hide sections based on role
    if (userRole === 'ADMIN') {
      document.getElementById('adminSection').style.display = 'block';
      loadDatabaseReports();
    } else if (userRole === 'RECRUITER') {
      document.getElementById('recruiterSection').style.display = 'block';
      loadRecruiterViolations();
    }
  </script>

